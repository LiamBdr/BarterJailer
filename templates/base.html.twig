<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <title>BarterJailer | {% block title %}{% endblock %}</title>

        {# FAVICON #}
        <link rel="icon" href="{{ asset('images/svg/favicon.svg') }}">

        {# META #}
        <meta name="description" content="BarterJailer | Remake du Jaipur version prison" />
        <meta name="keywords" content="Jaipur, Jaipur en ligne, BarterJailer">
        <meta name="author" content="Agence Plat'ome">

        {# THEME #}
        <meta name="theme-color" content="#FF6C40">

        {# FONTS #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">

        {# CSS #}
        <link href="{{ asset('css/styles.css') }}" rel="stylesheet"/>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {# JS #}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {# HEADER #}
        {{ include('components/header.html.twig') }}

        {# FLASH MESSAGE #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-message flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="main-container">
            {# CONTENU #}
            {% block body %}
            {% endblock %}
        </div>

        {# BASE SCRIPTS #}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script src="{{ asset('js/base.js') }}"></script>
        {% block additional_scripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
